
@{
    ViewBag.Title = "AddNotification";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model CordovaPushTest.Admin.Models.MessageModel
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Bildirim Gönderme</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Bildirim Gönderme
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm())
                        {
                            <div class="form-group">
                                <label>Başlık</label>
                                @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label>Mesaj</label>
                                @Html.TextAreaFor(x => x.Content, new {@class="form-control" })
                            </div>
                            <input type="submit" class="btn btn-default" name="name" value="Gönder" />
                        }

                    </div>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>